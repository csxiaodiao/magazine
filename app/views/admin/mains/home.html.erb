            <div class="info-box-content">
              <span class="info-box-text">WP系统 / 6系统</span>
              <span class="info-box-number"><%= @article_wp_count%> / <%= @article_six_count%></span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-orange"><i class="fa fa-medium"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">媒体总数</span>
              <span class="info-box-number"><%= @medium_count %></span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->


</section>

