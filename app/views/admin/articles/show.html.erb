
<!-- Main content -->
<section class="content">
    <div class="row">
    <div class="col-xs-12">
        <div class="box">
        <div class="box-header">
            <h3 class="box-title">基础信息</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            <table id="example2" class="table table-bordered table-hover">
            <tbody>

            
                    
                    <tr>
                        <th style="width: 15%"><%= t(@article.class.human_attribute_name(:title))%></th>
                        <td><%= @article.title %></td>   
                    </tr>

                    <tr>
                        <th style="width: 15%"><%= t(@article.class.human_attribute_name(:content))%></th>
                        <td><%= raw @article.content %></td>   
                    </tr>
   
                    <tr>
                        <th style="width: 15%"><%= t(@article.class.human_attribute_name(:status))%></th>
                        <td><%= @article.status_text %></td>    
                    </tr> 

                    <tr>
                        <th style="width: 15%"><%= t(@article.class.human_attribute_name(:six_status))%></th>
                        <td class="six_status">
                        <%= @article.six_status_text%>
                        
                        <% if @article.six_status.waiting? %>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <%= link_to('推送', push_six_admin_article_path(@article), class: 'reedit_content btn btn-sm btn-default', data: {id: @article.id},  method: 'post', remote: true)%>
                        <%end%>
                        </td>    
                    </tr> 

                    <tr>
                        <th style="width: 15%"><%= t(@article.class.human_attribute_name(:wp_status))%></th>
                        <td class="wp_status">
                        <%= @article.wp_status_text%>
                        
                        <% if @article.wp_status.waiting? %>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <%= link_to('推送', push_wp_admin_article_path(@article), class: 'reedit_content btn btn-sm btn-default', data: {id: @article.id},  method: 'post', remote: true)%>
                        <%end%>
                        </td>    
                    </tr> 

                 <tr>
                    <td colspan="2" align="center">
                        <%= link_to('修改', edit_admin_article_path(@article), class: 'btn btn-sm btn-warning', )%>
                    </td>
                </tr>
            
                

            </tbody>
            </table>
        </div><!-- /.box-body -->
        </div><!-- /.box -->



     





    </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->





        
        

