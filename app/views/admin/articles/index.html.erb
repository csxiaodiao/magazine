<!-- Main content -->
<section class="content">
    <div class="row">
    <div class="col-xs-12">
        <div class="box">
        <div class="box-header">
            <h3 class="box-title"><%= link_to('添加文章', new_admin_article_path, class: 'btn btn-sm btn-warning')%></h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            <table id="example2" class="table table-bordered table-hover">
            <thead>
                <tr>
                <th>标题</th>
                <th>正文内容</th>
                <th>状态</th>
                <th>上传时间</th>

                <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <% @articles.each do |article| %>
                    <tr>
                        <td><%= article.title %></td>
                        <td><%= article.content %></td>

                        <td><%= article.status_text %></td>
                        <td><%= article.created_at.localtime.to_s(:db) %></td>
                        <td>
                            <%= link_to('详细', admin_article_path(article), class: 'btn btn-sm btn-warning')%>
                            <%= link_to('修改', edit_admin_article_path(article), class: 'btn btn-sm btn-warning', )%>
                            <%= link_to('删除', admin_article_path(article), class: 'btn btn-sm btn-warning', method: 'delete')%>
                        </td>
 
                    </tr>
                    
                <%end%>
                
            </tbody>
            </table>
            <%= paginate @articles %>
        </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->


        
        

